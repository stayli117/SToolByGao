<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="stool_MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/stool_Toolbar</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/stool_color_toolbar</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/stool_color_dark_toolbar</item>
    </style>
    <style name="stool_Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>
    <style name="stool_default_textview_theme">
        <item name="android:textSize">@dimen/stool_text14</item>
        <item name="android:textColor">@color/stool_text_black</item>
    </style>
</resources>
