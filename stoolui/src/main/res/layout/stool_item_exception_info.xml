<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_exception_info_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/stool_x5"
    android:background="@drawable/stool_bg_exception_info"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_exception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stool_x5"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="2"
        android:paddingLeft="@dimen/stool_x5"
        android:paddingRight="@dimen/stool_x5"
        android:textColor="@color/stool_color_black"
        android:text=""
        android:textSize="@dimen/stool_text13" />

    <TextView
        android:id="@+id/txt_exception_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginTop="@dimen/stool_x5"
        android:paddingLeft="@dimen/stool_x5"
        android:paddingRight="@dimen/stool_x5"
        android:text=""
        android:textColor="@color/stool_bg_black_414049"
        android:layout_marginBottom="@dimen/stool_x8"
        android:textSize="@dimen/stool_text10" />


</LinearLayout>