<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llayout_network_info_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/stool_color_background"
              android:orientation="vertical"
              android:paddingBottom="@dimen/stool_text3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/stool_bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/stool_x5"
        android:paddingRight="@dimen/stool_x5"
        android:paddingTop="@dimen/stool_text3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_url_head"
                android:layout_width="@dimen/stool_x0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/stool_y30"
                android:text="@string/stool_url"
                android:textAppearance="@style/stool_default_textview_theme"
                android:textSize="@dimen/stool_text15"/>

            <TextView
                android:id="@+id/text_url"
                android:layout_width="@dimen/stool_x0"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:maxLines="10"
                android:minHeight="@dimen/stool_y30"
                android:textAppearance="@style/stool_default_textview_theme"
                android:textSize="@dimen/stool_text12"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_start_time_head"
                android:layout_width="@dimen/stool_x0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="@dimen/stool_y26"
                android:text="@string/stool_start_time"
                android:textAppearance="@style/stool_default_textview_theme"
                android:textSize="@dimen/stool_text10"/>

            <TextView
                android:id="@+id/text_start_time"
                android:layout_width="@dimen/stool_x0"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:minHeight="@dimen/stool_y26"
                android:textAppearance="@style/stool_default_textview_theme"
                android:textSize="@dimen/stool_text10"></TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>