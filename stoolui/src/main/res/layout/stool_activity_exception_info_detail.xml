<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_exception_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/stool_color_background"
    >
    <include layout="@layout/stool_toolbar_view"/>
    <TextView
            android:id="@+id/txt_exception_time_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stool_y50"
            android:text="2016-10-16 12:12:12"
            android:textSize="@dimen/stool_text13"
            android:gravity="center"
            android:paddingLeft="@dimen/stool_x5"
            android:paddingRight="@dimen/stool_x5"
            />
<ScrollView

        android:layout_margin="@dimen/stool_x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/txt_exception_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="@dimen/stool_text10"
                android:textColor="@color/stool_text_white"
                android:paddingLeft="@dimen/stool_x5"
                android:paddingRight="@dimen/stool_x5"
                android:background="@drawable/stool_bg_exception_info_detail"
                />

    </HorizontalScrollView>
</ScrollView>

</LinearLayout>
